<?xml version="1.0" encoding="UTF-8"?>
<project name="cmusphinx_assets">
  <property name="cmusphinx_assets.dir" value="cmusphinx_assets"/>
  <property name="cmusphinx_assets.list.name" value="cmusphinx_assets.lst"/>
  <property name="cmusphinx_assets.hash.type" value="md5"/>
  <property name="cmusphinx_assets.ctl.files"
    value="**/*.${cmusphinx_assets.hash.type},${cmusphinx_assets.list.name}"/>

  <fileset id="cmusphinx_assets" dir="${cmusphinx_assets.dir}" excludes="${cmusphinx_assets.ctl.files}"/>

  <target name="clean">
    <delete>
      <fileset dir="cmusphinx_assets" includes="${cmusphinx_assets.ctl.files}"/>
    </delete>
  </target>

  <target name="list">
    <pathconvert
      dirsep="/" pathsep="${line.separator}"
      refid="cmusphinx_assets" property="cmusphinx_asset.list">
      <map from="${basedir}/${cmusphinx_assets.dir}/" to=""/>
    </pathconvert>
    <echo message="${cmusphinx_asset.list}" file="${cmusphinx_assets.dir}/${cmusphinx_assets.list.name}"/>
  </target>

  <target name="checksum">
    <checksum algorithm="${cmusphinx_assets.hash.type}">
      <fileset refid="cmusphinx_assets"/>
    </checksum>
  </target>
</project>